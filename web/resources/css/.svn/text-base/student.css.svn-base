.nav-menu{
    list-style:none;
    padding:0;
    margin:0;
    border-right: 1px solid #E0E0E0;
    
}
.nav-menu li{
    //border: 1px solid #0000a0;
    border-top: 0;
    display: block;
    //background: #F6A828  repeat-x  0 -61px ;
    //background: -moz-linear-gradient(center top , #4AA6D6, #207DAA) repeat scroll 0 0 rgba(0, 0, 0, 0);
//background: linear-gradient(to bottom, #4AA6D6 0%, #54A3EE 50%, #3690F0 51%, #207DAA 100%) repeat scroll 0 0 rgba(0, 0, 0, 0);
    padding: 0 10px;
}
.nav-menu li a{
    text-decoration: none;
    padding-top:7px;
    //font-weight: bold;
    font-size: 14px;
    height: 23px;
    color: #3982CB;
    display: block;
    font-family: 'Myriad Set', Myriad, 'Helvetica Neue', Helvetica, Arial, Verdana, sans-serif;
    border-top: 1px solid #EAEAEA;
}
.nav-menu li:hover  {
    text-decoration: underline;
    color: #3982CB;
    //font-weight: bold;
    //background: -moz-linear-gradient(center top , #4AA6D6, #207DAA) repeat scroll 0 0 rgba(0, 0, 0, 0);
}
.nav-menu text {
    position: absolute;
    font-family: 'Myriad Set',Myriad,'Helvetica Neue',Helvetica,Arial,Verdana,sans-serif;
    font-size: 14px;
    height: 23px;
    padding-top: 7px;
    color:black;
    font-weight: bold;
    text-decoration: none;
}
