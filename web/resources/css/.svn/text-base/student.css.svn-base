}
.top-panel{
   
    background: -moz-linear-gradient(center top , #074E7C, #095F93) repeat scroll 0 0 rgba(0, 0, 0, 0);
}

.profile_name_style{
font-family: tahoma, arial, verdana, sans-serif;
font-size: 12px !important;
font-style: normal;
font-variant: normal;
color: #FFFFFF;
}
.top-menu{
    display: inline-block;
    font-size: 11px;
    line-height: 40px;
    padding: 0 8px;
}
.top-menu a{
    text-decoration: none;
    color: #FFFFFF;
}
.top-menu-sep:hover{
    background:#101132;
    cursor: pointer;
}
.top-menu-sep:hover a{
    color: #FFFFFF !important;
}

.logo-div{
    //background: red;
    width: 80%;
    font-family: tahoma,arial,verdana,sans-serif;
}
.updates-menu{
    background: skyblue;
    border: 1px solid;
    text-align: center;
    font-family: tahoma,arial,verdana,sans-serif;
    font-size: 14px;
    padding: 5px;
}
.label-for {
    color: #0000EE;
    font-family: tahoma, arial, verdana, sans-serif;
    font-size: 12px;
}
.font-family-name{
    font-family: tahoma, arial, verdana, sans-serif;   
    font-size: 12px;
}
.table-CSS{
border-collapse: none !important;
border-spacing: 0px !important;
width:100%;
}
.choice_div_css{
    height: 34px;
    width:100%;
    background: #4CA1FF;
    font-family: tahoma,arial,verdana,sans-serif;
    font-size: 14px;
    color: #FFFFFF;
}
.choice_div_css:hover{
    background:   linear-gradient(to bottom, #37AAEA 0px, #117ED2 100%) repeat scroll 0 0 ;
    cursor: pointer;
    color: gainsboro;
}
.border_css{
     border-bottom:  1px solid #3D4FEE; 
     border-top:  1px solid #3D4FEE;   
}
.arrow-right {
    border-bottom: 17px solid #FFFFFF;
    border-left: 17px solid #4CA1FF;
   
    border-top: 17px solid #FFFFFF;
    float: right;
}
.fwb {
font-weight: bold;
font-size: 11px;
font-family: 'lucida grande', tahoma, verdana, arial, sans-serif;
color: #333;
}
.tickerFeedMessage{
display: inline;
font-size: 11px;
font-weight: normal;
font-family: 'lucida grande', tahoma, verdana, arial, sans-serif;
}
