root { 
    display: block;
}
html,body{
    margin: 0;
}
#body{
    margin: 0 0px;
    background: #dedede;
}
#student-body{
-webkit-box-shadow: 0px 0px 2px 2px rgba(30, 50, 50, 0.75);
-moz-box-shadow:    0px 0px 2px 2px rgba(30, 50, 50, 0.75);
box-shadow:         0px 0px 2px 2px rgba(30, 50, 50, 0.75);
width: 1000px;
margin-left: auto;
margin-right: auto;
margin-top: 10px;
overflow: hidden;
background: #fff;
